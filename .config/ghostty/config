# Dynamic theme colors
config-file = ?"./themes/catppuccin-mocha.conf"

### Font
# font-family = "CaskaydiaMono Nerd Font"
# font-style = Regular
font-size = 15


### Settings
confirm-close-surface = false
window-decoration = false


### Keymaps
keybind=clear

# macos remap
key-remap = ctrl=super
key-remap = super=ctrl

keybind = ctrl+alt+shift+r=reload_config

keybind = ctrl+alt+shift+d=toggle_window_decorations

keybind = ctrl+shift+v=paste_from_clipboard

keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+equal=increase_font_size:1

keybind = f11=toggle_fullscreen


# ctrl-backspace
keybind = ctrl+backspace=text:\x1b\x7f
# ctrl-delete (delete word forward)
keybind = ctrl+delete=text:\x1b[3;5~
